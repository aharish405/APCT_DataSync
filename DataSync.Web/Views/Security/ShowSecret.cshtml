@model DataSync.Core.Models.ApiClient

@{
    ViewData["Title"] = "Client Created";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-success shadow-sm">
                <h4 class="alert-heading"><i class="bi bi-check-circle-fill"></i> Client Created Successfully!</h4>
                <p>Please copy the Client Secret now. <strong>It will not be shown again.</strong></p>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 text-primary fw-bold">Client Credentials</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Client Name</dt>
                        <dd class="col-sm-9">@Model.ClientName</dd>

                        <dt class="col-sm-3">Client ID</dt>
                        <dd class="col-sm-9"><code class="text-dark bg-light px-2 py-1 rounded">@Model.ClientId</code></dd>

                        <dt class="col-sm-3">Client Secret</dt>
                        <dd class="col-sm-9"><code class="text-danger bg-light px-2 py-1 rounded fs-5">@ViewBag.PlainSecret</code></dd>
                    </dl>
                </div>
                <div class="card-footer bg-white text-end">
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
